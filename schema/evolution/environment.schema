package evolution.environment;

enum MaterialType {
	A = 0;
	B = 1;
}

type Material {
	MaterialType mat_type = 1;
}

type ConsumptionRequest {
	MaterialType consumed = 1;
	MaterialType produced = 2;
}

type ConsumptionResponse {
	bool success = 1;
}

component Environment {
	id = 1100;
	map<MaterialType, uint32> resources = 1;

	command ConsumptionRequest consume returns ConsumptionResponse;
}
